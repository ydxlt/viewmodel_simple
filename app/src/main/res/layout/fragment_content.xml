<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center"
              android:padding="30dp"
              android:layout_height="match_parent">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="The old:"/>

    <TextView android:layout_width="match_parent" android:layout_marginTop="30dp" android:layout_height="wrap_content"
              android:id="@+id/tv_username"/>

    <EditText android:layout_width="match_parent" android:layout_marginTop="30dp" android:layout_height="wrap_content"
              android:hint="Input new user name"
              android:id="@+id/et_username"/>
</LinearLayout>